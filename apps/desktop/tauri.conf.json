{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rune Pause",
  "version": "0.2.0",
  "identifier": "com.lone-lodge.runepause",
  "build": {
    "frontendDist": "dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Rune Pause",
        "width": 360,
        "height": 560,
        "resizable": true,
        "decorations": true,
        "visible": true
      },
      {
        "label": "overlay",
        "title": "Break",
        "fullscreen": true,
        "decorations": false,
        "visible": false,
        "alwaysOnTop": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "msi"
    ],
    "icon": [
      "apps/desktop/src/assets/icon.png"
    ]
  },
  "plugins": {
    "autostart": {
      "enable": true
    }
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://raw.githubusercontent.com/OWNER/REPO/gh-pages/latest-{{target}}.json"
    ],
    "dialog": true
  },
  "security": {
    "csp": null
  }
}